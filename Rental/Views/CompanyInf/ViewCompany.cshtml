
@{
    ViewBag.Title = "ViewCompany";
    Layout = "~/Shared/_MyMaster.cshtml";
}

<!-- Start right Content here -->

<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="">
            <div class="page-header-title">
                <h4 class="page-title">Company Information</h4>
            </div>
        </div>

        <div class="page-content-wrapper ">

            <div class="container-fluid">

                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 style="text-align:right">  <a href="/CompanyInf/Add_Company" class="btn btn-outline-success"><i class="i-right fa fa-plus"></i>Create Company Information</a></h4>

                                <hr />

                                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; width: 100%;">

                                    <thead>
                                        <tr>
                                            <th>CompanyName</th>
                                            <th>Location</th>
                                            <th>Phone</th>
                                            <th>Email</th>
                                            <th>Facebook</th>
                                            <th>Twitter</th>
                                            <th>Whatsapp</th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>


                                    <tbody>
                                        @{ foreach (System.Data.DataRow dr in ViewBag.onNewCompany.Rows)
                                            {
                                                <tr>
                                                    <td>@dr["CompanyName"]</td>
                                                    <td>@dr["Location"]</td>
                                                    <td>@dr["Phone"]</td>
                                                    <td>@dr["Email"]</td>
                                                    <td>@dr["Facebook"]</td>
                                                    <td>@dr["Twitter"]</td>
                                                    <td>@dr["Whatsapp"]</td>
                                                    <td>

                                                        <a href="/CompanyInf/Delete_Company?id=@dr["CompanyId"]" class="btn btn-outline-danger" style="color:green"><i class="fa fa-trash">Delete</i></a>
                                                        <a href="/CompanyInf/Update_Company?id=@dr["CompanyId"]" class="btn btn-outline-info" style="color:green"><i class="fa fa-pen">Update</i></a>

                                                   
                                                    </td>

                                                </tr>
                                            }
                                        }

                                    </tbody>


                                </table>
                                @{
                                    if (TempData["msg"] != null)
                                    {
                                        <script>alert( '@TempData["msg"]')</script>
                                        }
                                    }


                                </div>
                        </div>
                    </div>

                </div> <!-- End Row -->


            </div><!-- container-fluid -->

        </div> <!-- Page content Wrapper -->

    </div> <!-- content -->



</div>
